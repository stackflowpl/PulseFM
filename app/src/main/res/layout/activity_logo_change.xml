                android:background="@drawable/angle_small_right"
                android:backgroundTint="@color/settings_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/corner_radio"
