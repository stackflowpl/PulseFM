<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zmiana motywu aplikacji"
            android:textColor="@color/text_color"
            android:textFontWeight="600"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/theme_light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/corner_radio"
                android:padding="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp">

                <View
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/brightness"
                    android:backgroundTint="@color/settings_icon"
                    android:padding="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Jasny motyw"
                    android:textColor="@color/settings_text"
                    android:textFontWeight="600"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/check_box_light_theme"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/settings_icon"
                    android:padding="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/theme_dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/corner_radio"
                android:padding="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp">

                <View
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/moon"
                    android:backgroundTint="@color/settings_icon"
                    android:padding="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Ciemny motyw"
                    android:textColor="@color/settings_text"
                    android:textFontWeight="600"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/check_box_dark_theme"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/settings_icon"
                    android:padding="10sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ustawienia aplikacji"
        android:textColor="@color/text_color"
        android:textFontWeight="600"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/corner_radio"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/change_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                app:cardCornerRadius="999dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <ImageView
                    android:id="@+id/change_icon_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/pulsefm_blue"
                    android:padding="10sp"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Zmień ikonę aplikacji"
                android:layout_marginStart="10dp"
                android:textColor="@color/settings_text"
                android:textFontWeight="600"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center"
                android:background="@drawable/angle_small_right"
                android:backgroundTint="@color/settings_icon" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wsparcie"
        android:textColor="@color/text_color"
        android:textFontWeight="600"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/corner_radio"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/dotacja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/corner_settings_box">

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/heart_active"
                android:backgroundTint="@color/settings_icon"
                android:padding="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Wspomóż projekt"
                android:layout_marginStart="10dp"
                android:textColor="@color/settings_text"
                android:textFontWeight="600"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center"
                android:background="@drawable/angle_small_right"
                android:backgroundTint="@color/settings_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ad_paid"
                android:backgroundTint="@color/settings_icon"
                android:padding="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Obejrzyj reklamę"
                android:layout_marginStart="10dp"
                android:textColor="@color/settings_text"
                android:textFontWeight="600"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center"
                android:background="@drawable/angle_small_right"
                android:backgroundTint="@color/settings_icon" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Techniczne"
        android:textColor="@color/text_color"
        android:textFontWeight="600"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/corner_radio"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/discord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/corner_settings_box"
            android:padding="10dp">

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/discord"
                android:backgroundTint="@color/settings_icon"
                android:padding="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Serwer wsparcia Discord"
                android:layout_marginStart="10dp"
                android:textColor="@color/settings_text"
                android:textFontWeight="600"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center"
                android:background="@drawable/angle_small_right"
                android:backgroundTint="@color/settings_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/github"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/github"
                android:backgroundTint="@color/settings_icon"
                android:padding="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Kod Open Source"
                android:layout_marginStart="10dp"
                android:textColor="@color/settings_text"
                android:textFontWeight="600"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center"
                android:background="@drawable/angle_small_right"
                android:backgroundTint="@color/settings_icon" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developerskie"
        android:textColor="@color/text_color"
        android:textFontWeight="600"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/corner_radio"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/tworcy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/corner_settings_box"
            android:padding="10dp">

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/dev"
                android:backgroundTint="@color/settings_icon"
                android:padding="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Twórcy aplikacji PulseFM"
                android:layout_marginStart="10dp"
                android:textColor="@color/settings_text"
                android:textFontWeight="600"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center"
                android:background="@drawable/angle_small_right"
                android:backgroundTint="@color/settings_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
>

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/document"
                android:backgroundTint="@color/settings_icon"
                android:padding="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Wersja aplikacji"
                android:layout_marginStart="10dp"
                android:textColor="@color/settings_text"
                android:textFontWeight="600"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/version_app"
                android:layout_marginStart="10dp"
                android:textColor="@color/settings_text"
                android:textFontWeight="600"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>