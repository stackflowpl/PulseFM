<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/widget_background_dark"
    android:padding="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/widget_station_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/radio24_trans"
        android:layout_marginEnd="8dp"
        android:contentDescription="Station Icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/widget_station_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PulseFM"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/widget_track_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wstrzymane"
            android:textColor="#CCCCCC"
            android:textSize="10sp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/widget_play_pause"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_play_arrow_white"
        android:background="@drawable/widget_button_background_dark"
        android:contentDescription="Play/Pause"
        android:scaleType="centerInside" />

</LinearLayout>
