<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/widget_background_light"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/widget_station_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/radio24_trans"
            app:tint="@android:color/black"
            android:layout_marginEnd="12dp"
            android:contentDescription="Station Icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_station_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="PulseFM"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wstrzymane"
                android:textColor="#4CAF50"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/widget_track_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aktualny utwÃ³r"
            android:textColor="#212121"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/widget_track_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wykonawca"
            android:textColor="#666666"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/widget_play_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_play_arrow_black"
            android:background="@drawable/widget_button_background_light"
            android:contentDescription="Play/Pause"
            android:scaleType="centerInside"
            android:layout_marginEnd="12dp" />

        <ImageButton
            android:id="@+id/widget_stop"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_stop_black"
            android:background="@drawable/widget_button_background_light"
            android:contentDescription="Stop"
            android:scaleType="centerInside" />

    </LinearLayout>

</LinearLayout>
